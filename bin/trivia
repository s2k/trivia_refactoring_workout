#!/usr/bin/env ruby
require 'English'
$LOAD_PATH.unshift("#{File.dirname(__FILE__)}/../lib")

require 'ugly_trivia/game'

not_a_winner = false

if ARGV.first.match? /\A\d+\z/
  Random.srand(ARGV.first.to_i)
end

game = UglyTrivia::Game.new

%w[Chet Pat Sue].each{ |player| game.add player }

game.play
