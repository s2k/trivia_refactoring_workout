#!/usr/bin/env ruby
require 'English'
$LOAD_PATH.unshift("#{File.dirname(__FILE__)}/../lib")

require 'ugly_trivia/game'

not_a_winner = false

if ARGV.first.match? /\A\d+\z/
  Random.srand(ARGV.first.to_i)
end

game = UglyTrivia::Game.new

game.add 'Chet'
game.add 'Pat'
game.add 'Sue'

begin

  game.roll(rand(5) + 1)

  if rand(9) == 7
    not_a_winner = game.wrong_answer
  else
    not_a_winner = game.correct_answer
  end



end while not_a_winner
